---
// src\pages\blog\index.astro
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import MainLayout from "@/layouts/MainLayout.astro";
import TagNav from "@/components/TagNav.astro";

const posts: CollectionEntry<"blog">[] = await getCollection("blog");

posts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

---

<MainLayout title="Blog" description="Últimos artículos y noticias">
  <section class="blog-index">
    <h1>Blog</h1>
    <p class="lead">Últimos artículos y novedades.</p>

    <ul class="blog-list" role="list">
      {posts.map((post: CollectionEntry<"blog">) => (
        <li class="blog-list-item">
          <article>
            <h2>
              <a href={`/blog/${post.slug}`}>{post.data.title}</a>
            </h2>
            <time datetime={post.data.date.toISOString()}>
              {post.data.date.toLocaleDateString("es-AR", {
                year: "numeric",
                month: "long",
                day: "numeric",
              })}
            </time>
            {post.data.description && <p>{post.data.description}</p>}
            
            {post.data.tags && (
              <ul class="blog-tags" role="list">
                {post.data.tags.map((tag: string) => (
                  <li><a href={`/blog/${tag}`}>{tag}</a></li>
                ))}
              </ul>
            )}
          </article>
        </li>
      ))}
    </ul>

    <TagNav />
  </section>
</Mainlayout>

<style>
/* Contenedor general del blog */
.blog-index {
  max-width: 1000px;
  margin: 0 auto;
  padding: 3rem 1rem;
}

/* Título principal */
.blog-index > h1 {
  font-size: 2.5rem;
  font-weight: 800;
  color: var(--brand-3);
  margin-bottom: 0.5rem;
}

/* Subtítulo o lead */
.blog-index .lead {
  font-size: 1.25rem;
  color: var(--color-muted);
  margin-bottom: 2rem;
}

/* Lista de posts */
.blog-list {
  display: grid;
  gap: 2.5rem;
  padding: 0;
  margin: 0;
  list-style: none;
}

/* Cada post */
.blog-list-item {
  background: var(--color-surface);
  border-radius: var(--radius-2);
  border: solid 1px var(--brand-1);
  padding: 1.5rem 2rem;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.blog-list-item:hover {
  transform: translateY(-3px);
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
}

/* Título del post */
.blog-list-item h2 {
  font-size: 1.75rem;
  margin: 0 0 0.5rem;
  color: var(--brand-1);
}

.blog-list-item h2 a {
  text-decoration: none;
  transition: color 0.2s ease;
}

.blog-list-item h2 a:hover {
  color: var(--brand-2);
}

/* Fecha del post */
.blog-list-item time {
  font-size: 0.875rem;
  color: var(--color-muted);
  display: block;
  margin-bottom: 0.5rem;
}

/* Descripción */
.blog-list-item p {
  margin: 0.5rem 0 1rem;
  color: var(--color-text, #1e293b);
  line-height: 1.6;
}

/* Tags */
.blog-list-item .blog-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.blog-list-item .blog-tags a {
  background: var(--brand-1);
  color: var(--on-brand);
  padding: 0.3rem 0.75rem;
  border-radius: 999px;
  font-size: 0.75rem;
  text-decoration: none;
  transition: background 0.2s ease;
}

.blog-list-item .blog-tags a:hover {
  background: var(--brand-1);
}

/* Responsive: en móviles, ajusta padding y tamaño */
@media (max-width: 768px) {
  .blog-list-item {
    padding: 1rem 1.25rem;
  }

  .blog-list-item h2 {
    font-size: 1.5rem;
  }
}
</style>
