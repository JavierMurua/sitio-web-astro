---
// src/pages/abogado-laboral.astro
import MainLayout from '@/layouts/MainLayout.astro';
import Hero from '@/sections/Hero.astro';
import Trust from '@/sections/Trust.astro';
import AboutIndividual from '@/sections/AboutIndividual.astro';
import Services, { services, type Service } from '@/sections/Services.astro';
import Process from '@/sections/Process.astro';
import Posts from '@/sections/Posts.astro';
import FinalCTA from '@/sections/FinalCTA.astro';
import Faq from '@/sections/Faq.astro';
import Contact from '@/sections/Contact.astro';

import heroImage from '/src/assets/images/balanza-engranaje-derecho-laboral.png';
import radioCut from '@/assets/logos/radio_cut.png';
import elCiudadano from '@/assets/logos/el_ciudadano.jpg';
import danielImage from '@/assets/images/daniel-paredes-00.webp';

import { getPosts } from '@/config/postAdapter';
import { contact, getWhatsAppLink } from '@/contact/contact';

const laborServices = services.filter((s: Service) => s.category === 'laboral');
const posts = await getPosts({ tag: 'noticias', limit: 3 });

// Obtener el teléfono correspondiente a Daniel
const daniPhone = contact.phones.find((p) => p.owner.includes('Daniel'))!;

const heroCTA = {
  text: "Consultar por WhatsApp",
  href: getWhatsAppLink(daniPhone.number, daniPhone.whatsappMessage),
  external: true,
};

const aboutData = {
  title: "Sobre Daniel Paredes – Especialista en Derecho Laboral, Accidentes y Enfermedades del trabajo",
  image: danielImage,
  alt: "Retrato del abogado Daniel Paredes",
  paragraphs: [
    "Soy Daniel Paredes, abogado especializado en accidentes de trabajo, enfermedades profesionales y despidos.",
    "Defiendo los derechos de los trabajadores en Rosario y Santa Fe, Argentina.",
    "Te asesoraré desde la primera consulta y llevaré adelante tu caso con profesionalismo y compromiso.",
  ],
  highlight: "📌 Primera consulta sin compromiso.",
  cta: {
    text: "Consultar ahora",
    desktop: getWhatsAppLink(daniPhone.number, daniPhone.whatsappMessage, true),
    mobile: getWhatsAppLink(daniPhone.number, daniPhone.whatsappMessage, false),
  },
};

const faqItems = [
  {
    question: "¿Cuánto me corresponde de indemnización por un accidente de trabajo en Rosario?",
    answer:
      "El monto depende del tipo de lesión, grado de incapacidad y salario. Como especialistas en reclamos laborales y ante la ART, calculamos la máxima indemnización posible y gestionamos el cobro sin adelantar dinero.",
    open: true,
  },
  {
    question: "¿Qué hago si trabajo en negro y me accidento?",
    answer:
      "Aunque no estés registrado, tenés derechos laborales. Podemos iniciar un juicio para que el empleador y la ART respondan. Estos casos son complejos, pero tenemos amplia experiencia en ellos.",
  },
  {
    question: "¿Qué pasa si la ART rechaza mi reclamo o me da el alta antes de tiempo?",
    answer:
      "En esos casos recurrimos a las Comisiones Médicas y, si es necesario, a la justicia para que obtengas la cobertura y la indemnización que te corresponde.",
  },
  {
    question: "¿Cuánto tiempo tengo para reclamar a la ART?",
    answer:
      "El plazo es de 2 años desde el accidente o diagnóstico. Te recomendamos consultarnos cuanto antes para no perder tu derecho.",
  },
];
---

<MainLayout>

  <Hero
  title="Abogado Especialista en Accidentes y Enfermedades del Trabajo en Rosario"
  subtitle="Si sufriste un accidente laboral o enfermedad profesional, te ayudamos a obtener la indemnización justa que te corresponde por ley."
  image={heroImage}
  ctaPrimary={heroCTA}
  ctaSecondary={{ text: "Ver servicios", href: "#servicios" }}
  seal="Trayectoria comprobada. Compromiso real."
/>

  <Trust
    quote="Resolvieron mi tratamiento a tiempo. El estudio se encargó de todo con mi obra social; me sentí acompañado en cada paso."
    author="Juan C., cliente de Salud"
    logos={[
      { src: radioCut, alt: 'Radio Cut' },
      { src: elCiudadano, alt: 'El Ciudadano' },
    ]}
  />

  <AboutIndividual {...aboutData} />

  <Services
    services={laborServices}
    title="Áreas de Especialización en Derecho Laboral y Accidentes"
    subtitle="Nos ocupamos de tu caso si sufriste un accidente o enfermedad laboral y la ART no responde como corresponde."
  />

  <Process />

  <Posts
    title="Casos reales de trabajadores que defendieron su derecho"
    subtitle="Resultados concretos que marcan la diferencia en la vida de las personas."
    posts={posts}
  />

  <FinalCTA />

  <Faq
    title="Preguntas frecuentes sobre reclamos laborales"
    subtitle="Respuestas claras a las dudas más comunes para que tomes la mejor decisión."
    items={faqItems}
  />

  <Contact
    title="Defendé tus derechos laborales hoy mismo"
    subtitle="Contactate para una evaluación de tu caso. Estoy para ayudarte."
    layout="simple"
  />

</MainLayout>