---
// src/sections/Faq.astro

export interface FaqItem {
  question: string;
  answer: string;
  open?: boolean; // opcional, permite abrir por defecto
}

interface Props {
  id?: string;
  title: string;
  subtitle?: string;
  items: FaqItem[];
}

const { id = "faq", title, subtitle, items } = Astro.props;
---

<section id={id} class="faq" aria-labelledby={`${id}-title`}>
  <div class="faq-container">
    <div class="faq-header">
      <h2 id={`${id}-title`}>{title}</h2>
      {subtitle && <p>{subtitle}</p>}
    </div>

    <div class="faq-list" role="list">
      {items.map(({ question, answer, open }) => (
        <details open={open} role="listitem">
          <summary>{question}</summary>
          <p>{answer}</p>
        </details>
      ))}
    </div>
  </div>
</section>

<style>
  /* ===== FAQ ===== */
  .faq {
    padding: 4rem 1rem;
    background: #fff;
  }

  .faq-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .faq-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .faq-header h2 {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-text-heading, #0b1f4b);
    margin: 0;
  }

  @media (min-width: 640px) {
    .faq-header h2 {
      font-size: 2.5rem;
    }
  }

  .faq-header p {
    margin-top: 1rem;
    font-size: 1.125rem;
    color: #4b5563;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .faq-list {
    max-width: 768px;
    margin: 0 auto;
  }

  .faq-list details {
    border-bottom: 1px solid #e5e7eb;
    padding: 1rem 0;
  }

  .faq-list summary {
    font-size: 1.125rem;
    font-weight: 600;
    color: #374151;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    list-style: none;
  }

  .faq-list summary::-webkit-details-marker {
    display: none;
  }

  .faq-list summary::after {
    content: "âŒ„";
    font-size: 1.25rem;
    transition: transform 0.3s ease;
  }

  .faq-list details[open] summary::after {
    transform: rotate(180deg);
  }

  .faq-list p {
    margin-top: 0.75rem;
    font-size: 1rem;
    line-height: 1.6;
    color: #4b5563;
    padding-right: 1rem;
  }
</style>
