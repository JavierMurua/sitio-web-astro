---
import Button from '@/components/Button.astro';
import Logo from '../components/Logo.astro';
import { contact, getWhatsAppLink } from '@/contact/contact';


export interface Props {
  menuItems: { label: string; href: string; current?: boolean }[];
}

const { menuItems } = Astro.props;

const cta = {
  label: 'Consultar', // Texto del botón
};
---

<header class="header" role="banner">
  <div class="u-container header__bar">
    <a href="/" class="header__brand" aria-label="Inicio">
      <Logo text="Z&P" name="Zalazar & Paredes" size="md" showName={true} />
    </a>

    <!-- Toggle menú -->
    <input id="menu-toggle" type="checkbox" class="menu-toggle" aria-hidden="true" />
    <label for="menu-toggle" class="menu-icon" aria-label="Abrir menú">☰</label>

    <nav class="header__nav" aria-label="Navegación principal">
      <ul class="menu" role="list">
        {
          menuItems.map((item) => (
            <li>
              <a
                class="menu__link"
                href={item.href}
                aria-current={item.current ? 'page' : undefined}
              >
                {item.label}
              </a>
            </li>
          ))
        }

        <!-- CTA -->
        <li class="menu__cta">
  <Button
    href={getWhatsAppLink(contact.phones[0].number, contact.phones[0].whatsappMessage, true)}
    variant="primary"
    device="desktop"
    external={true}
  >
    {cta.label}
  </Button>

  <Button
    href={getWhatsAppLink(contact.phones[0].number, contact.phones[0].whatsappMessage, false)}
    variant="primary"
    device="mobile"
    external={true}
  >
    {cta.label}
  </Button>
</li>
      </ul>
    </nav>
  </div>
</header>

<style>
  /* ========= Header fijo ========= */
  .header {
    position: sticky;
    top: 0;
    z-index: 1000;
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: saturate(150%) blur(10px);
    border-bottom: 1px solid var(--color-border);
  }
  .header__bar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.75rem;
    padding: 0.75rem 0;
  }
  .header__brand {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
  }
  .header__logo {
    width: 40px;
    height: 40px;
    border-radius: 8px;
    background: linear-gradient(135deg, #183c7a, #0b1f4b);
    display: grid;
    place-items: center;
    color: #fff;
    font-weight: 700;
    font-family: var(--font-serif);
  }
  .header__name {
    font-weight: 700;
    font-size: 1.125rem;
    color: #0b1f4b;
  }

  /* ========== Menú hamburguesa ========== */
  .menu-toggle {
    display: none;
  }
  .menu-icon {
    font-size: 1.5rem;
    cursor: pointer;
    user-select: none;
  }
  .header__nav {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: white;
    display: none;
    flex-direction: column;
    padding: 1rem;
    border-bottom: 1px solid var(--color-border);
  }
  .menu {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .menu__link {
    color: #0b1f4b;
    font-weight: 700;
    font-size: 1rem;
    text-decoration: none;
  }
  .menu__link[aria-current='page'] {
    color: var(--brand-1);
  }
  .menu__cta {
    margin-top: 1rem;
  }
  .menu__cta .button {
    width: 100%;
    text-align: center;
  } /* Toggle abierto */
  .menu-toggle:checked ~ .header__nav {
    display: flex;
  }

  /* ========== Escritorio ========== */
  @media (min-width: 960px) {
    .menu-icon {
      display: none;
    }
    .header__nav {
      position: static;
      display: block;
      background: transparent;
      border: none;
      padding: 0;
    }
    .menu {
      flex-direction: row;
      gap: 1.5rem;
      align-items: center;
    }
    .menu__cta {
      margin-top: 0;
    }
    .menu__cta .button {
      width: auto;
    }
  }
</style>
