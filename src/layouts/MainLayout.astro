---
import "../assets/styles/global.css";
import Header from "../sections/Header.astro";
import Footer from "../sections/Footer.astro";
import BaseHead from "../components/BaseHead.astro";
import WhatsAppButton from "@/components/WhatsAppButton.astro";
import { contact, getDefaultPhone } from "@/contact/contact";

const menu = [
  { label: "Inicio", href: "/" },
  { label: "Abogado de Salud", href: "/abogado-de-salud" },
  { label: "Abogado Laboral", href: "/abogado-laboral" },
  { label: "Casos de Ã©xito", href: "/casos-de-exito" },
  { label: "Contacto", href: "/contacto" },
];

const { title, description, canonical, image, noIndex = false } = Astro.props;
const defaultPhone = getDefaultPhone();
---

<!DOCTYPE html>
<html lang="es-AR">
  <head>
    <BaseHead
      title={title}
      description={description}
      image={image}
      canonical={canonical}
      noIndex={noIndex}
    />
  </head>
  <body>
    <Header menuItems={menu} />
    <main>
      <slot />
    </main>
    <Footer menuItems={menu} />
    <WhatsAppButton owner={defaultPhone.owner} />
  </body>
</html>
